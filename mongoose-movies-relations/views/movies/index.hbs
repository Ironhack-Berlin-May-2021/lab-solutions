<h1>Movies</h1>
{{#each movies}}
    <h2>{{this.title}}</h2>
    <h3>{{this.plot}}</h3>
    {{#each this.cast}}
        <li>Name: {{ name }} Catchphrase: {{ catchPhrase }}</li>
    {{/each}}
    <a href="/movies/{{ this._id }}/edit">Edit</a>
{{/each}}
